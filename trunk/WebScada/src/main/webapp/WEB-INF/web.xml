<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <listener>
        <listener-class>org.webscada.modbusserver.ModbusServer</listener-class>
    </listener>

    <servlet>
        <servlet-name>ModbusEdit</servlet-name>
        <servlet-class>org.webscada.controllers.ModbusEditController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ModbusEdit</servlet-name>
        <url-pattern>/ModbusEdit.do</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
