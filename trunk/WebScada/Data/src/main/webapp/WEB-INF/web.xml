<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>ru.scada.controllers.ReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataController</servlet-name>
        <servlet-class>ru.scada.controllers.DataController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataController</servlet-name>
        <url-pattern>/Data.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/Report.do</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
