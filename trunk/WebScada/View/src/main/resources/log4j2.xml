<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="DB" class="org.apache.log4j.DBAppender">
        <connectionSource class="org.apache.log4j.receivers.db.JNDIConnectionSource">
            <param name="jndiLocation" value="java:/comp/env/jdbc/postgresql" />
        </connectionSource>
        <param name="sql" value="INSERT INTO logs(l_id, dt, logger, level, message) VALUES(DEFAULT, '%d', '%C', '%p', '%m')"/>
        <layout class="org.apache.log4j.PatternLayout">
            <!--<param name="ConversionPattern"-->
                   <!--value="INSERT INTO logs(l_id, dt, logger, level, message) VALUES(DEFAULT, '%d', '%C', '%p', '%m')"/>-->
        </layout>
    </appender>

    <appender name="ConsoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p[%-16.16t][%32.32c] - %m%n" />
        </layout>
    </appender>

    <logger name="ru.scada.modbusserver">
        <level value="INFO"/>
        <appender-ref ref="DB"/>
    </logger>

    <logger name="org.hibernate">
        <level value="ERROR"/>
        <appender-ref ref="DB"/>
    </logger>

    <root>
        <priority value="ERROR"/>
        <appender-ref ref="DB"/>
    </root>
</log4j:configuration>
