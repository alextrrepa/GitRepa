<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <listener>
        <listener-class>ru.scada.modbusserver.ModbusServer</listener-class>
    </listener>
    <servlet>
        <servlet-name>TagNamesController</servlet-name>
        <servlet-class>ru.scada.controllers.TagNamesController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TagNamesController</servlet-name>
        <url-pattern>/TagNames.do</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>monitor.jsp</welcome-file>
    </welcome-file-list>
</web-app>
