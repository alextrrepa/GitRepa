<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         id="WebApp_ID" version="3.0">
    <display-name>Archetype Created Web Application</display-name>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>auth.controllers.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>appName</param-name>
            <param-value>webscada</param-value>
        </init-param>
        <init-param>
            <param-name>subjectkey</param-name>
            <param-value>subject</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
        <dispatcher>INCLUDE</dispatcher>
        <dispatcher>ERROR</dispatcher>
    </filter-mapping>

    <listener>
        <listener-class>view.modbusserver.ModbusServer</listener-class>
    </listener>

    <servlet>
        <servlet-name>TagNamesController</servlet-name>
        <servlet-class>view.controllers.TagNamesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataController</servlet-name>
        <servlet-class>data.controllers.DataController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportController</servlet-name>
        <servlet-class>data.controllers.ReportController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DispatchController</servlet-name>
        <servlet-class>admin.controllers.DispatchController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModbusTreeEditController</servlet-name>
        <servlet-class>admin.controllers.ModbusTreeEditController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>auth.controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>auth.controllers.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>auth.controllers.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/Logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModbusTreeEditController</servlet-name>
        <url-pattern>/ModbusTreeEdit.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DispatchController</servlet-name>
        <url-pattern>/Dispatch.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportController</servlet-name>
        <url-pattern>/Report.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataController</servlet-name>
        <url-pattern>/Data.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TagNamesController</servlet-name>
        <url-pattern>/TagNames.do</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>